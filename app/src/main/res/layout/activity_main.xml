<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#455A64">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="18%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SCAN"
        android:id="@+id/txt_scan"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="50%"
        android:id="@+id/scan"
        android:src="@drawable/scan_icon"
        android:clickable="true"
        android:layout_alignBottom="@+id/txt_scan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />

    <ImageButton
        android:layout_height="20dp"
        android:layout_width="75dp"
        android:text="Scan"
        android:onClick="launchScanAnak"
        android:id="@+id/imageButton"
        android:fontFamily="roboto"
        android:textColor="#FFFF"
        android:background="#455A64"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="20%"
        android:id="@+id/button_scan"
        android:layout_below="@+id/txt_scan"
        android:clickable="true"
        android:layout_toLeftOf="@+id/button_history" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="20%"
        android:id="@+id/button_inquiry"
        android:layout_below="@+id/txt_scan"
        android:clickable="true"
        android:layout_toRightOf="@+id/button_history" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="20%"
        android:id="@+id/button_camera"
        android:layout_below="@+id/txt_scan"
        android:clickable="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="30%"
        android:id="@+id/button_logout"
        android:src="@drawable/logoutfix"
        android:layout_below="@+id/button_history"
        android:clickable="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="30%"
        android:id="@+id/button_history"
        android:src="@drawable/historyfix"
        android:layout_below="@+id/button_scan"
        android:clickable="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="18%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView6"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_above="@+id/scan"
        android:layout_toRightOf="@+id/scan"
        android:layout_toEndOf="@+id/scan" />
</android.support.percent.PercentRelativeLayout>